{
  "name": "gaycarboys/local-wordpress",
  "description": "Local development environment for gaycarboys.com with linting and tooling.",
  "type": "project",
  "require-dev": {
    "phpcompatibility/php-compatibility": "^9.3",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
    "phpcs": "phpcs -p",
    "phpcbf": "phpcbf -p"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "phpcodesniffer-search-depth": 5
  }
}


